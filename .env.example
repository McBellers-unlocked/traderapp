# Trading Bot Configuration
BROKER=alpaca  # Options: alpaca, ib (Interactive Brokers), paper

# Alpaca API Credentials (for paper or live trading)
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading URL for testing

# Interactive Brokers Configuration (if using IB)
IB_HOST=127.0.0.1
IB_PORT=7497
IB_CLIENT_ID=1

# Strategy Parameters
OPENING_RANGE_MINUTES=5  # Can be 5-15
TRADING_WINDOW_START=09:30
TRADING_WINDOW_END=10:30
TIMEZONE=America/New_York

# Risk Management
MAX_POSITION_SIZE=1  # Number of ES contracts
RISK_REWARD_RATIO=2.0  # Target 2x risk
MAX_DAILY_LOSS=500  # Maximum loss per day in dollars
MAX_DAILY_TRADES=3

# Volume Confirmation
VOLUME_THRESHOLD_MULTIPLIER=1.5  # Breakout volume must be 1.5x average

# News Filter
AVOID_NEWS_DAYS=true
NEWS_API_KEY=your_news_api_key  # Optional: For automated news detection

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log
